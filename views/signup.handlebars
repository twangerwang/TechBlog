<div class = "card">
   <h3 class = "card-header">Create a New Account</h3>
   <form id = "signup-form" class = "card-body">
      <label for = "username-signup" class = "form-label">Username</label>
      <input id = "username-signup" type = "text" class = "form-input-ls" />

      <label class = "form-label" for = "password-signup">Password</label>
      <input id = "password-signup" type = "password" class = "form-input-ls" />

      <button type = "submit" class = "button-ls link-button">Create My New Account!</button>
      <br>
      <a class = "link-button" href = "/login">Log Me in Instead</a>
   </form>
</div>


<script src = "/javascript/signup.js"></script>