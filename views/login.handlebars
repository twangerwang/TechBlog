<div class = "card">
   <h3 class = "card-header">Login to My Account</h3>
   <form id = "login-form" class = "card-body">
      <label class = "form-label" for = "username-login">Username</label>
      <input id="username-login" type = "text" autofocus = "true" class = "form-input-ls" />

      <label class = "form-label" for = "password-login">Password</label>
      <input id = "password-login" type="password" autofocus = "true" class = "form-input-ls" />

      <button type = "submit" class = "button-ls link-button">Log Me In!</button>
      <br>
      <a class = "link-button" href = "/signup">Create a New Account Instead</a>
   </form>
</div>


<script src = "/javascript/login.js"></script>